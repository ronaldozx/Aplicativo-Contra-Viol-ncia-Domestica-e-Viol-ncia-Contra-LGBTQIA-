<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MapaFragment"
    android:background="@drawable/fundo_alerta">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_musica"
                android:textSize="22sp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:textColor="#6d6c48"

                />

            <View
                android:id="@+id/musica"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="125dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/musica">

            </View>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judy Garland"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="#6d6c48"
                android:layout_below="@id/musica"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_manual"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/musica"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/lyrics" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/musica"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/musica"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/coracao" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/musica"
                    android:layout_marginTop="100dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/avancar_c" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/musica">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_alertaStop"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="90dp"
                        android:background="@drawable/pause"
                        android:layout_centerHorizontal="true"
                        android:visibility="invisible" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_alertaPlay"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="90dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/play" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/musica"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/avancar" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/musica"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="100dp"
                    android:background="@drawable/replay" />



            </LinearLayout>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>